<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="beans.Item" table="itemtable" schema="webproject">
        <id name="itemID" column="itemID">
                <generator class="sequence"/>
        </id>
        <property name="itemName" column="itemName"/>
        <property name="category" column="category"/>
        <property name="venderCode" column="venderCode"/>
        <property name="unit" column="unit"/>
        <property name="qunatity" column="qunatity"/>
        <property name="description" column="description"/>
        <property name="price" column="price"/>
       	
       	<union-subclass name="beans.ItemInShop" table="iteminshopTable" schema="webproject">
       	</union-subclass>
    </class>
</hibernate-mapping>